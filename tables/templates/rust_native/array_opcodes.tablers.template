#define RABBITIZER_DEF_INSTR_ID(prefix, caseBits, name, ...) \
    table[ Opcode::prefix##_##name as usize] = OpcodeDescriptor { \
        __VA_ARGS__, \
        ..OpcodeDescriptor::new( #name ) \
    } .check_panic_chain();

#define RABBITIZER_DEF_INSTR_ID_ALTNAME(prefix, caseBits, name, altname, ...) \
    RABBITIZER_DEF_INSTR_ID(prefix, caseBits, name, __VA_ARGS__)

use crate::{OpcodeDescriptor, opcode, Operand, Opcode, InstrType, AccessType, InstrSuffix};

pub static OPCODES: [OpcodeDescriptor; opcode::OPCODE_COUNT] = {
    let mut table = [OpcodeDescriptor::new(""); opcode::OPCODE_COUNT];

    #include "InstrIds.inc"

    let mut i = 0;
    while i < opcode::OPCODE_COUNT {
        table[i].check_panic();
        i += 1;
    }

    table
};


